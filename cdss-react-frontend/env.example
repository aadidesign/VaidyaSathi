# ============================================
# CDSS React Frontend - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# For Vite, all variables must start with VITE_

# ============================================
# Backend API Configuration
# ============================================
# URL of the Django backend API
VITE_API_BASE_URL=http://127.0.0.1:8000

# Frontend port (default: 3000)
PORT=3000

# API endpoints
VITE_API_CHAT_ENDPOINT=/api/rag-chat/
VITE_API_HEALTH_ENDPOINT=/api/health/
VITE_API_PATIENT_ENDPOINT=/api/patients/

# ============================================
# Application Configuration
# ============================================
# Application name
VITE_APP_NAME=VaidyaSathi CDSS

# Application version
VITE_APP_VERSION=2.0.0

# Enable debug mode (shows console logs)
VITE_DEBUG_MODE=true

# ============================================
# Feature Flags (Optional)
# ============================================
# Enable/disable specific features
VITE_ENABLE_RESEARCH_PAPERS=true
VITE_ENABLE_CONFIDENCE_SCORES=true
VITE_ENABLE_RISK_ASSESSMENT=true
VITE_ENABLE_PERSONALIZATION=true

# ============================================
# UI Configuration (Optional)
# ============================================
# Maximum number of messages to display
VITE_MAX_CHAT_HISTORY=100

# Chat interface update interval (ms)
VITE_TYPING_INDICATOR_DELAY=1000

# Backend connection check interval (ms)
VITE_HEALTH_CHECK_INTERVAL=30000





