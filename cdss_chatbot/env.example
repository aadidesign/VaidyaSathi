# ============================================
# CDSS Medical Chatbot - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ============================================
# REQUIRED: Google Gemini API Configuration
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Django Configuration
# ============================================
# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new key with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=django-insecure-your-secret-key-here
DEBUG=True

# ============================================
# Medical Knowledge Base Configuration
# ============================================
# Path to medical knowledge files (relative to project root)
MEDICAL_KNOWLEDGE_PATH=Rag/data/

# ============================================
# NLP and Semantic Parsing Configuration
# ============================================
# Enable advanced semantic parsing features
ENABLE_SEMANTIC_PARSING=True

# SciSpacy model to use for medical NER
# Options: en_core_sci_sm, en_core_sci_md, en_core_sci_lg
SCISPACY_MODEL=en_core_sci_sm

# Enable UMLS entity linking for medical concepts
UMLS_LINKING=True

# ============================================
# AI Model Configuration (Optional)
# ============================================
# These models will be downloaded automatically from HuggingFace
# Set to override defaults if needed

# Dense retrieval model for medical document search
# Default: pritamdeka/S-PubMedBert-MS-MARCO
# DENSE_RETRIEVAL_MODEL=pritamdeka/S-PubMedBert-MS-MARCO

# Question answering model
# Default: deepset/roberta-base-squad2
# QA_MODEL=deepset/roberta-base-squad2

# Text summarization model
# Default: facebook/bart-large-cnn
# SUMMARIZATION_MODEL=facebook/bart-large-cnn

# ============================================
# Database Configuration (Optional)
# ============================================
# Default uses SQLite. For production, configure PostgreSQL or MySQL
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=cdss_db
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# ============================================
# CORS Configuration (Development)
# ============================================
# Comma-separated list of allowed origins
# CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# Logging Configuration (Optional)
# ============================================
# Set log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO





